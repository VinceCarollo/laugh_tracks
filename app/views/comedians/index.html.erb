<header><h1>Comedians</h1></header>
<div class="statistics">
  <h6>Statistics</h6>
  <% ages = 0 %>
  <% cities = [] %>
  <% @comedians.each do |comedian| %>
    <% ages += comedian.age %>
    <% cities << comedian.birthplace %>
  <% end %>
  <p><b>Average Age:</b> <%= ages / @comedians.count %></p>
  <p><b>Cities:</b> &nbsp;
    <% cities.each do |city| %>
      <%= city %> &nbsp;
    <% end %>
  </p>
</div>
<% @comedians.each do |comedian| %>
    <div id="comedian-<%= comedian.id %>" class='comedian_card'>
        <h5><%= link_to comedian.name, comedian_path(comedian), :style=>"text-decoration: none; color: black;" %></h5>
        <p><b>Age:</b> <%= comedian.age %></p>
        <p><b>Birthplace:</b> <%= comedian.birthplace %></p>
        <p><b>Special Count:</b> <%= comedian.specials.count%></p>
        <div class="specials">
          <h4>Specials:</h4><br>
          <% comedian.specials.each do |special| %>
            <p class='special_name'><%= special.name%></p><br>
            <p class="mins">length: <%=  special.runtime_mins %> minutes</p><br>
          <% end %>
        </div>
        <br>
        <img class='comedian_img' id="comedian-<%= comedian.id %>-img" src =<%= comedian.image_url %>>
    </div>
<% end %>
